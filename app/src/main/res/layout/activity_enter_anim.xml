<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2EBED"
    tools:context=".activity_enter_anim">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="365dp"
        android:layout_height="230dp"

        android:layout_marginStart="44dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="83dp"
        android:src="@drawable/logoor"
        app:layout_constraintBottom_toTopOf="@+id/txtapp_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtapp_title"
        android:layout_width="270dp"
        android:layout_height="69dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="38dp"
        android:fontFamily="serif"
        android:text="ORganizer"
        android:textAlignment="center"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtapp_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_image" />

    <TextView
        android:id="@+id/txtapp_subtitle"
        android:layout_width="201dp"
        android:layout_height="41dp"
        android:layout_marginBottom="175dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Made by Or Azulay"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtapp_title" />

</androidx.constraintlayout.widget.ConstraintLayout>