<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2EBED"
    tools:context=".activity_enter_anim">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="241dp"
        android:layout_height="0dp"

        android:layout_marginTop="109dp"
        android:layout_marginBottom="153dp"
        android:src="@drawable/logoor"
        app:layout_constraintBottom_toTopOf="@+id/txtapp_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtapp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="54dp"
        android:text="ORganizer"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtapp_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_image" />

    <TextView
        android:id="@+id/txtapp_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="176dp"

        android:gravity="center"
        android:text="Made by Or Azulay"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtapp_title"
        app:layout_constraintTop_toBottomOf="@+id/txtapp_title" />

</androidx.constraintlayout.widget.ConstraintLayout>