<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <TextView
        android:id="@+id/tvEventname"
        android:layout_width="113dp"
        android:layout_height="32dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="28dp"
        android:text="TextView"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvEventdate"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvEventtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="28dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvEventdate" />

    <TextView
        android:id="@+id/tvEventdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvEventname"
        app:layout_constraintEnd_toStartOf="@+id/tvEventtype"
        app:layout_constraintStart_toEndOf="@+id/tvEventname"
        app:layout_constraintTop_toTopOf="@+id/tvEventtype"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>