<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#B4ABE6E8"
    android:gravity="center"
    tools:context=".MainPage">


    <Button
        android:id="@+id/btntologin"
        android:layout_width="271dp"
        android:layout_height="0dp"
        android:layout_marginBottom="150dp"
        android:background="#7BEFE6"
        android:text="Log In"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btntoregister" />

    <Button
        android:id="@+id/btntoregister"
        android:layout_width="259dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        android:background="#7BEFE6"
        android:text="register"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btntologin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btntoodot" />

    <Button
        android:id="@+id/btntoodot"
        android:layout_width="267dp"
        android:layout_height="0dp"
        android:layout_marginBottom="27dp"
        android:background="#7BEFE6"
        android:text="about"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btntoregister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgwelcome" />

    <TextView
        android:id="@+id/txtwelcome"
        android:layout_width="448dp"
        android:layout_height="135dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="27dp"
        android:fontFamily="serif"
        android:text="Welcome to ORganizer!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imgwelcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgwelcome"
        android:layout_width="382dp"
        android:layout_height="271dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/btntoodot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtwelcome"
        app:srcCompat="@drawable/logoor" />

</androidx.constraintlayout.widget.ConstraintLayout>